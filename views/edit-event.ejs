<%- include('header') -%>

<h1><%= title %></h1>
<p><%= description %></p>

<h2>Skráningar á viðburð</h2>
<% if(registrations.length === 0) { %>
  <p>Engar skráningar á viðburðinn</p>
<% } else { %>
  <ul>
    <% for (const registration of registrations) { %>
      <li><%= registration.name %></li>
    <% } %>
  </ul>
<% } %>

<h2>Breyta viðburði</h2>
<form class="form" method="post" autocomplete="off">
  <div class="field">
    <label for="name">Nafn</label>
    <input type="text" name="name" value="<%= formData.name %>" id="name">
  </div>

  <div class="field">
    <label for="description">Lýsing</label>
    <textarea name="description" id="description"><%= formData.description %></textarea>
  </div>

  <% for (const err of errors) { %>
    <p><%= err.msg %></p>
  <% } %>

  <button class="button">Breyta viðburði</button>
</form>

<a href="/admin">Til baka</a>

<%- include('footer') -%>
